<div class="container">
<p id="notice">
	<%= notice %>
</p>

<h2>Editing Book</h2>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
  <p  style="color: red; font-size: 25px;"><%= @book.errors.count %>errors  prohibited this obj from being saved:</p>
  <ul>
  	<% @book.errors.full_messages.each do |message| %>
  	<li style="color: red;"><%= message %></li>
  	<% end %>
  </ul>
  <% end %>
<h5><strong>Title</strong></h5>
<%= f.text_field :title, :size => "100%" %>
<h5><strong>Opinion</strong></h5>
<%= f.text_area :body, :size => "100%" %>

<p><%= f.submit 'Update Book', class: "btn btn-info btn-block"  %></p>

<% end %>

<p><%= link_to "Show", book_path(@book) %>|<%= link_to "Back", '/books' %></p>
